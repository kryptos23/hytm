
\newcommand{\act}[1]{%
    \relax\ifmmode
        \mathord{\mathcode`\-="702D \sf #1\mathcode`\-="2200}%
    \else
%        $\mathord{\mathcode`\-="702D\sf #1\mathcode`\-="2200}$%
%        {\sfshape #1}%
        {\sf #1}%
    \fi
}

\newcommand{\tup}[1]{%
    \relax\ifmmode
%        \mathord{\mathcode`\-="702D\bf #1\mathcode`\-="2200}%
      \langle #1 \rangle%
    \else
%        $\mathord{\mathcode`\-="702D\bf #1\mathcode`\-="2200}$%
        $\langle$ #1 $\rangle$%
    \fi
}

\newcommand{\seq}[1]{%
