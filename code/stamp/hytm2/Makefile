# ==============================================================================
#
# Makefile.real
#
# ==============================================================================

LIBNAME=hytm2

# ==============================================================================
# Variables
# ==============================================================================

CC      := g++
CFLAGS  := -g -Wall -Winline -O3
#CFLAGS  += -m32
LD      := g++

LIBHYTM := lib$(LIBNAME).a

OBJS := \
	$(LIBNAME).o \
	tmalloc.o \
	../murmurhash/MurmurHash3.o \
#

AR      := ar
RANLIB  := ranlib

RM := rm -f


# ==============================================================================
# Rules
# ==============================================================================

.PHONY: default
default: lazy

.PHONY: clean
clean:
	$(RM) $(LIBHYTM) $(OBJS)

../murmurhash/MurmurHash3.o: ../murmurhash/MurmurHash3.cpp
	$(CC) $(CFLAGS) -c $< -o $@

$(LIBHYTM).o: $(LIBHYTM).cpp
	$(CC) $(CFLAGS) -c $< -o $@

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(LIBHYTM): $(OBJS)
	$(AR) cru $@ $^
	$(RANLIB) $@

.PHONY: lazy
lazy: $(LIBHYTM)



# ==============================================================================
# Dependencies
# ==============================================================================

%.o: %.h


# ==============================================================================
#
# End of Makefile.real
#
# ==============================================================================
