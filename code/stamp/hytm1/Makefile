# ==============================================================================
#
# Makefile.real
#
# ==============================================================================

LIBNAME=hytm1

# ==============================================================================
# Variables
# ==============================================================================

CC      := gcc
CFLAGS  := -g -Wall -Winline -O3
#CFLAGS  += -m32
LD      := gcc

LIBHYTM := lib$(LIBNAME).a

SRCS := \
	$(LIBNAME).c \
	tmalloc.c \
#
OBJS := ${SRCS:.c=.o}

AR      := ar
RANLIB  := ranlib

RM := rm -f


# ==============================================================================
# Rules
# ==============================================================================

.PHONY: default
default: lazy

.PHONY: clean
clean:
	$(RM) $(LIBHYTM) $(OBJS)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

$(LIBHYTM): $(OBJS)
	$(AR) cru $@ $^
	$(RANLIB) $@

.PHONY: lazy
lazy: $(LIBHYTM)



# ==============================================================================
# Dependencies
# ==============================================================================

%.o: %.h


# ==============================================================================
#
# End of Makefile.real
#
# ==============================================================================
